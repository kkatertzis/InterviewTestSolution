@page "/edit"
@page "/edit/{Id}"
@using BlazorApp.Models
@inherits EditCustomerModel

<h1>@PageTitle</h1>

@if (CurrentCustomer != null)
{


    <div class="row">
        <div class="col-md-9">
            <EditForm Model="@CurrentCustomer" OnValidSubmit="@Save">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="CompanyName" class="col-md-3 control-label">Company Name:</label>
                    <div class="col-md-6">
                        <input type="text" for="CompanyName" @bind=@CurrentCustomer.CompanyName class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.CompanyName)" /> </div>
                </div>
                <div class="form-group">
                    <label for="ContactName" class="col-md-3 control-label">Contact Name:</label>
                    <div class="col-md-6">
                        <input type="text" for="ContactName" @bind=@CurrentCustomer.ContactName class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.ContactName)" /> </div>
                </div>
                <div class="form-group">
                    <label for="Address" class="col-md-3 control-label">Address:</label>
                    <div class="col-md-6">
                        <input for="Address" type="text" @bind=@CurrentCustomer.Address class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.Address)" /> </div>
                </div>
                <div class="form-group">
                    <label for="City" class="col-md-3 control-label">City:</label>
                    <div class="col-md-6">
                        <input for="City" type="text" @bind=@CurrentCustomer.City class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.City)" /> </div>
                </div>
                <div class="form-group">
                    <label for="Region" class="col-md-3 control-label">Region:</label>
                    <div class="col-md-6">
                        <input for="Region" type="text" @bind=@CurrentCustomer.Region class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.Region)" /> </div>
                </div>
                <div class="form-group">
                    <label for="PostalCode" class="col-md-3 control-label">Postal Code:</label>
                    <div class="col-md-6">
                        <input for="PostalCode" type="text" @bind=@CurrentCustomer.PostalCode class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.PostalCode)" /> </div>
                </div>
                <div class="form-group">
                    <label for="Country" class="col-md-3 control-label">Country:</label>
                    <div class="col-md-6">
                        <input for="Country" type="text" @bind=@CurrentCustomer.Country class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.Country)" /> </div>
                </div>
                <div class="form-group">
                    <label for="Phone" class="col-md-3 control-label">Phone:</label>
                    <div class="col-md-6">
                        <input for="Phone" type="number" @bind=@CurrentCustomer.Phone class="form-control" />
                    </div>
                    <div class="col-md-9"><ValidationMessage For="@(() => CurrentCustomer.Phone)" /> </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-7">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" @onclick=@Cancel>Cancel</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

}
else
{
    <p><img src="./basicloader.gif" /></p>
}
